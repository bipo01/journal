<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Sign Up</title>
        <link rel="stylesheet" href="register.css" />
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css"
        />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
            crossorigin="anonymous"
        />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
            rel="stylesheet"
        />
    </head>
    <body>
        <div class="div-form-register">
            <form id="form-register" action="/register" method="post">
                <input
                    autocomplete="off"
                    type="text"
                    name="nome"
                    id="nome"
                    placeholder="Nome"
                />
                <input
                    autocomplete="off"
                    type="text"
                    name="usuario"
                    id="usuario"
                    placeholder="Username"
                />
                <input
                    type="password"
                    name="senha"
                    id="senha"
                    placeholder="Senha"
                    required
                />
                <input
                    type="password"
                    name="confirmarsenha"
                    id="confirmarsenha"
                    placeholder="Confirmar Senha"
                    required
                />
                <button type="submit">Registrar</button>
            </form>
            <p id="logarP">
                <a href="/login">Entrar</a>
            </p>
            <p id="invalido" class="<%= userExists || 'hidden' %>">
                Usuário já existe
            </p>
            <p id="invalido" class="hidden">Senhas não combinam</p>
        </div>

        <script>
            const senha = document.querySelector("#senha");
            const confirmarsenha = document.querySelector("#confirmarsenha");
            const usuario = document.querySelector("#usuario");
            const nome = document.querySelector("#nome");

            document
                .querySelector("#form-register")
                .addEventListener("submit", (e) => {
                    if (
                        senha.value.trim().length === 0 ||
                        confirmarsenha.value.trim().length === 0 ||
                        usuario.value.trim().length === 0 ||
                        nome.value.trim().length === 0
                    ) {
                        e.preventDefault();
                        alert("Preencha todos os campos");
                    } else if (
                        senha.value.includes(" ") ||
                        confirmarsenha.value.includes(" ")
                    ) {
                        e.preventDefault();
                        alert("As senhas não podem conter espaços");
                    } else if (senha.value !== confirmarsenha.value) {
                        e.preventDefault();
                        confirmarsenha.style.background = "red";
                    }
                });
        </script>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"
        ></script>
    </body>
</html>
